<Page x:Class="XBAPClient.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:oxy="http://oxyplot.codeplex.com"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="Page1">
    <Grid>
        <StackPanel Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <DataGrid HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ItemsSource="{Binding DatagridSource}" AutoGenerateColumns="true" Width="580" Height="200">
                <!--<DataGrid.Columns>
                    <DataGridTextColumn Header="Col 0" Binding="{Binding Symbol}" />
                    <DataGridTextColumn Header="Col 1" Binding="{Binding Name}" />
                </DataGrid.Columns>-->
            </DataGrid>
            <oxy:Plot Name="chart" Title="{Binding Title}" Height="336">
                <oxy:Plot.Series>
                    <oxy:LineSeries ItemsSource="{Binding Chart}"/>
                </oxy:Plot.Series>
            </oxy:Plot>
        </StackPanel>


    </Grid>
</Page>
